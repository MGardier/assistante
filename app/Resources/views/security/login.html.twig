<div class="signupSection">

    <i class="icon ion-ios-ionic-outline" aria-hidden="true"></i>
    <form action="{{ path('login') }}" method="POST" class="signupForm" name="signupform">

        <h2 class="h2">Connectez-vous</h2>
        <ul class="noBullet">
            <li>
                <label for="username"></label>
                <input type="text" class="inputFields ecraser_comme_jamais" id="username" name="_username"
